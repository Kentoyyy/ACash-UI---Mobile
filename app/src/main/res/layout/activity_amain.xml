<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Amain"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#D5A86F">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_invert_colors_24"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACash"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_email_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="70dp"/>


        <View
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="#fff"
            android:id="@+id/view1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="115dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit"
            android:textSize="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="280dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHP"
            android:textSize="13dp"
            android:textColor="#fff"
            android:layout_below="@id/view1"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.30"
            android:textSize="27dp"
            android:textColor="#fff"
            android:layout_below="@id/view1"
            android:textStyle="bold"
            android:id="@+id/txtbalance"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="145dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:layout_below="@id/view1"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="250dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Balance"
            android:layout_below="@id/txtbalance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textStyle="bold"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_baseline_phonelink_setup_24"
        android:layout_marginTop="270dp"
        android:id="@+id/cashin"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash in"
        android:layout_below="@id/cashin"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_baseline_money_24"
        android:layout_marginTop="270dp"
        android:id="@+id/money"
        android:layout_marginLeft="170dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Money"
        android:layout_below="@id/money"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="155dp"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_baseline_save_24"
        android:layout_marginTop="270dp"
        android:id="@+id/Asave"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASave"
        android:layout_below="@id/Asave"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="View all ACash Services"
        android:textStyle="bold"
        android:textColor="#D5A86F"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="280dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More to look forward to"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="470dp"
        android:id="@+id/txt1"
        android:textColor="#000"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Because you deserve only the best from us"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_below="@id/txt1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="550dp"
        app:cardBackgroundColor="#CDCDCD"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#979797"
            android:layout_marginLeft="100dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#979797"
            android:layout_marginLeft="80dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#979797"
            android:layout_marginLeft="80dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#D5A86F"
            android:layout_marginLeft="80dp"/>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="550dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#CDCDCD"
        android:layout_marginLeft="270dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're sure you'll like this"
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_marginTop="720dp"
        android:textStyle="bold"
        android:id="@+id/liketxt"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all"
        android:textColor="#D5A86F"
        android:textSize="14dp"
        android:layout_marginTop="720dp"
        android:textStyle="bold"
        android:layout_marginLeft="310dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promos and freebies all day, everyday"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_below="@id/liketxt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>








</RelativeLayout>